<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="801dp"
    android:orientation="vertical" >

    <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:background="#89BDAA">

        <LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="0dp"
        android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:background="#2c3331"
	    android:padding="30dp"
	    android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bc_1" />
            
            <TextView
                android:id="@+id/l_topic"
                style="@style/l_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration" />
            
            <TextView
                android:id="@+id/l_desc"
                style="@style/l_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input your phone number to receive a download link." />
	    
        </LinearLayout>
        
        <LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="0dp"
        android:layout_weight="1.5"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">

            <TextView
                android:id="@+id/r_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:text="Your phone number : "
                android:textSize="30sp" />
             
             <TextView
                android:id="@+id/display"
                style="@style/display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:maxLength="12"          
                android:text="" />
            
            
            
            <GridLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:columnCount="3"
		    android:orientation="horizontal" >
		 
			   <Button	android:id="@+id/b_1" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="1" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_2" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="2" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_3" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="3" android:textSize="40sp" android:layout_margin="5dp"/>
			  <Button	android:id="@+id/b_4" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="4" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_5" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="5" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_6" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="6" android:textSize="40sp" android:layout_margin="5dp"/>
			  <Button	android:id="@+id/b_7" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="7" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_8" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="8" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_9" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="9" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_plus" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="+" android:textSize="40sp" android:layout_margin="5dp"/>
			   <Button	android:id="@+id/b_0" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="0" android:textSize="40sp" android:layout_margin="5dp"/>
			  <Button	android:id="@+id/b_delete" 
			       		android:layout_width="90dp" android:layout_height="90dp" android:background="#36686F" android:textColor="#fff"
			       		android:text="Del" android:textSize="40sp" android:layout_margin="5dp"/>
			  
			  
			    
			 
			</GridLayout>
			
            <Button	android:id="@+id/b_next" 
			       		android:layout_width="290dp" android:layout_height="wrap_content" android:background="#2C9C72" android:textColor="#fff"
			       		android:text="Next" android:textSize="40sp" android:layout_margin="5dp" android:padding="10dp" android:layout_gravity="center"/>	
			  
            
        </LinearLayout>
        
    

    

	</LinearLayout>

</LinearLayout>